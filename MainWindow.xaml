<Window x:Class="BeetleGenetics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeetleGenetics"
        mc:Ignorable="d"
        Title="MainWindow"  Height="450" Width="800">
    <Grid>
        <Button Content="Generate Population" HorizontalAlignment="Left" Margin="31,355,0,0" VerticalAlignment="Top" Click="Generate_Population"/>
        <Button Content="Clear Population" HorizontalAlignment="Left" Margin="156,355,0,0" VerticalAlignment="Top" Click="Clear_Population"/>
        <ComboBox Name="GenerationNumber" Visibility="Hidden"
                  HorizontalAlignment="Left" Margin="31,306,0,0" VerticalAlignment="Top" 
                  Width="120">
            <ComboBoxItem>10</ComboBoxItem>
            <ComboBoxItem>50</ComboBoxItem>
            <ComboBoxItem>100</ComboBoxItem>
            <ComboBoxItem>200</ComboBoxItem>
        </ComboBox>

        <Canvas Width="800" Name="myCanvas" Visibility="Visible" Margin="0,0,0,117">
            <Line
                X1="0" Y1="295"
                X2="800" Y2="295"
                Stroke="Black"
                StrokeThickness="3"/>

        </Canvas>

    </Grid>
</Window>
